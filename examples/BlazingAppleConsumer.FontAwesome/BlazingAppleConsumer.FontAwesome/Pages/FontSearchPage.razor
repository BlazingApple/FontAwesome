@page "/fonts"

<div style="position:sticky; top:0px; background-color:white;" class="my-2">
    <EditForm Model="@(new {})" OnValidSubmit="Search">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label for="list">Search Query</label>
                    <InputText id="list" class="form-control" @bind-Value="@_searchQuery"></InputText>
                </div>
            </div>
        </div>
        <div class="row my-2">
            <div class="col-lg-12 d-flex justify-content-center">
                <button class="btn btn-primary" type="submit">Search!</button>
            </div>
        </div>
    </EditForm>
    <hr />
</div>
@if (_icons is not null)
{
    <div class="my-2">
        Huzzah!
    </div>
}
